<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <TextView
        android:id="@+id/InitOptTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:text="@string/DialogInitPuzzleTitle"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/PuzzleSize"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/btnInitOptPuzSizeMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:src="@drawable/ic_puzzle_size_btn" />

        <TextView
            android:id="@+id/tvInitOptPuzSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0x0"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/btnInitOptPuzSizePlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:rotation="180"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_puzzle_size_btn" />
    </LinearLayout>

</LinearLayout>